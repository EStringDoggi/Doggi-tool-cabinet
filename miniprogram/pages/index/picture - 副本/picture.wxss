/* pages/picture/picture.wxss */
.body{ width: 100%;height: 100%;z-index: 0}
  .body-light{ background-color: rgb(240, 240, 240)}
  .body-dark{ background-color: rgb(55, 53, 68)}
.chooseEmoPicView{ position: absolute; z-index: 20; width: 100%;margin: 0; padding: 0}
.EmoPicBox{overflow-y: hidden;display: block;background-color: rgba(0, 0, 0, 0.5);}
.chooseEmoPic{ position: relative;  padding: 0 10rpx;  z-index: 20;display: flex;flex-wrap:  wrap;overflow-y: scroll;max-height: 360rpx}
.EmoBtnBox{display: block;}
.emoPic{ width: 100rpx; height: 100rpx; margin: 10rpx 10rpx; border:2px #fff solid;z-index: 20; flex-direction: column}
.emoPicUpload{ font-size: 30rpx; text-align: center; border: 0; line-height: 3.5; font-weight: bold; background-color: rgb(18, 182, 18); color: #fff; 
box-sizing: content-box;display: inline-block;height: 100rpx; margin: 10rpx 10rpx;
width: max-content}
.empPicButton{ display: block; width: 200rpx; height: 80rpx; background-color: gray; border: 0px #fff solid; color: #fff; text-align: center; font-size: 11pt; padding: 0; margin: 0; line-height: 80rpx; z-index: 20}
.deleteImg{ width: 50rpx; height: 50rpx; position: absolute; right:35rpx; top: 10rpx;}
.deleteImgText{ color: rgb(175, 175, 175); font-size: 20rpx; text-align: center; position: absolute; right: 20rpx; top: 0rpx;display: block; height: 100rpx; line-height: 8;z-index: 1}
.deleteImgBtn{ position: absolute; height: 100rpx; width: 100rpx; z-index: 10; right: 10rpx; background-color: transparent; border: 0px ; border-radius: none;}

.canvas-img{ width:660rpx;min-height: 500rpx;  margin: 0 auto; background-color: #fff}
.text{ text-align: left;color: grey; margin-left: 1em; font-size: 10pt}
.view-item{ width: 100%;  margin: 0vh 0; }
  .view-light{ background-color: #fff; color: #000}
  .view-dark{ background-color: rgb(55, 53, 68); color: #fff}
.input-text{margin:0vh 0; text-align: center; font-size: 11pt}
.picker{  margin:0 auto}
.picker-text{ margin: 0vh auto; text-align: center; font-size: 11pt}
.canvas-text{ width: 100%; height: 100%;  border: 1px #000 solid; z-index: 1; }
.cover-view-1{ background-color:rgb(48, 131, 23); width: 100%; height: 50px;margin-top: 0px; text-align: center; line-height: 3; color: #fff; font-size: 16px; font-weight: bold}
.button{ line-height: 2; font-size: 12pt; margin-top: 1vh; height: 24pt}
.cleartext{ color: rgb(230,67,64)}

