.body{ width: 100%;height: 100vh }
  .body-light{ background-color: rgb(240, 240, 240)}
  .body-dark{ background-color: #474747}
.cover-view{ background-color:#0080FF; width: 100%; height: 10vh;margin-top: 0px; text-align: center; line-height: 10vh; color: #fff; font-size: 30rpx; font-weight: bold}

.view-line{display: block;   width: 100%; height: 200rpx; margin:10rpx 0 }
  .view-line-light{ background-color: #fff}
  .view-line-dark{background-color: #3b3b3b; }
.view-money{ width: 5em; height: 100%; display: inline-block;text-align: center}
.view-triangle{ border-color: gray transparent transparent transparent; border-width: 15rpx; border-style: solid; width: 0; height: 0; position: relative; left: 4em; top: -1em}
.picker{ border-radius: 5px; width: 3em;  font-size: 1em; margin: 0 20rpx; height: 80rpx; vertical-align:middle; box-sizing: border-box; font-weight: bold;text-align: center;display: inline-block; }
  .picker-light{ color: #000}
  .picker-dark{ color: #fff}
.country-img{width: 3em; height: 3em; border-radius: 50%;}

.money-input{   width: 500rpx; vertical-align:middle; height: 200rpx; border-radius: 5px;float: right; font-size: 50rpx;  line-height: 3; text-align: right; margin-right: 10rpx; padding-right: 10rpx}
  .money-input-dark{ background-color:#3b3b3b;color: #fff;}
  .money-input-light{ background-color: #fff; color: #000}

.money-class{ text-align: center; height: 30px; line-height:2;}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}