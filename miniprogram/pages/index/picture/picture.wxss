/* pages/picture/picture.wxss */
.body{ width: 100%;height: 100%;z-index: 0;overflow: hidden}
  .body-light{ background-color: rgb(240, 240, 240)}
  .body-dark{ background-color: #474747}

.textConfirmBtn{position: absolute;width: max-content;height: 50rpx;}
.textConfirmBtnImg{width:50rpx;height:50rpx;display: inline-block;margin: 0 30rpx;border-radius: 50%}

.deleteImg{ width: 50rpx; height: 50rpx; position: absolute; right:35rpx; top: 10rpx;}
.deleteImgText{ color: rgb(175, 175, 175); font-size: 20rpx; text-align: center; position: absolute; right: 20rpx; top: 0rpx;display: block; height: 100rpx; line-height: 8;z-index: 1}
.deleteImgBtn{ position: absolute; height: 100rpx; width: 100rpx; z-index: 10; right: 10rpx; background-color: transparent; border: 0px ; border-radius: none;}

.canvasBox{height: 60vh;}
.canvas-img{ width:660rpx;max-height: 60vh;height: 100%;  margin: 0 auto; background-color: #fff}


.input-text{margin:0vh 0; text-align: center; font-size: 40rpx;display: inline-block;width: 78%;vertical-align: middle}
.inputTextBtn{display: inline-block;width: 20%;background-color:  #09bb07;color: #fff;
vertical-align: middle;line-height:10vh; font-weight: bold;
height: 10vh; margin: 2.5vh 1%;font-size: 40rpx;font-family: Kristen ITC }

/*未选择图片时提示*/
.EmptyPicNow{position: absolute;top: 50%;left:30%;width: max-content;text-align: center;
font-size: 40rpx;color: #bebebe}
.canvas-text{ width: 100%; height: 100%;  z-index: 1; }
.cover-view-1{ background-color:#0080FF; width: 100%; height: 10vh;margin-top: 0px; text-align: center; line-height: 10vh; color: #fff; font-size: 30rpx; font-weight: bold}
.button{ line-height: 2; font-size: 12pt; margin-top: 1vh; height: 24pt}
.cleartext{ color: rgb(230,67,64);text-align: center;font-size: 20rpx;}

.picker{  margin:0 auto}
.picker-text{ margin: 0vh auto;height: 5vh;line-height: 5vh; text-align: center; font-size: 40rpx}
.picker-bold{margin: 1vh auto;width: 3vh;height: 3vh;font-size: 3vh;line-height: 3vh}
.picker-color{margin: 1vh auto;width: 3vh;height: 3vh;border-radius: 50%}
.viewBox{position:relative;height:30vh;background-color: #fff;}
.scrollBox{height: 15vh;position: relative;line-height: 2;border-top: 1px rgb(216, 216, 216) solid;display: inline-block;vertical-align:middle;z-index: 666}
.view-item{ width: 150rpx;height: 100%;display: inline-block;max-height: 15vh;line-height: 2;padding-top: 3vh;flex-wrap: nowrap;vertical-align: top}
  .view-light{ background-color: #fff; color: #000}
  .view-dark{ background-color:#3b3b3b; color: #fff}
.text{ text-align: center;color: grey;  font-size: 20rpx}
.scrollitemimg{width:5vh;height: 5vh;margin: 0 auto;display: block}
.emoPicUpload{ font-size: 30rpx; text-align: center; border: 0; line-height:10vh; font-weight: bold; background-color: rgb(18, 182, 18); color: #fff; 
box-sizing: content-box;display: inline-block;height: 10vh; margin: 2.5vh 10rpx;
width: max-content}
/*图片文字模块容器*/
.scrollBoxContainer{position: relative;height: 15vh;overflow: hidden}
/*图片模块*/
.scrollBoxPic{position: absolute;transition: all 0.3s ease-in-out}
/*.scrollEmoPic{height: 100%;width:100%; flex-wrap: nowrap;display: flex;vertical-align: middle;
line-height: 15vh}*/
.scrollEmoPic{height: 100%;width:max-content; flex-wrap: nowrap;display: flex;vertical-align: middle;
line-height: 15vh}
.scrollemoPicitem{width: 13vh; height: 13vh; margin: 1vh; border:2px rgb(175, 175, 175) solid;}
/*文字模块*/
.scrollBoxText{position: absolute;transition: all 0.3s ease-in-out;width: 100%;line-height: 15vh}
.icon_textOk{width: 5vh;height: 5vh;margin: 2.5vh auto}
/*颜色模块*/
.scrollBoxcolor{position: absolute;transition: all 0.3s ease-in-out;width: 100%;line-height: 15vh}
.scrollBoxColorView{height: 100%;width:max-content; flex-wrap: nowrap;line-height: 15vh}
.scrollBoxcolorItem{width:60rpx;height: 60rpx;text-align: center;margin: 0 60rpx;border-radius: 50%;display: inline-block;border: 2px rgb(210,210,210) solid;vertical-align: middle;color:#B2B2B2;}
.scrollBoxcolorItemText{text-align: center;font-size: 20rpx;vertical-align: middle;width: max-content;height: 20rpx}
/*功能选择模块*/
.scrollBoxChoose{width: max-content;height: 100%;}
.savePic{width: 25%;background-color: #09bb07;display: inline-block;
font-size: 60rpx;font-family: Kristen ITC;color: #fff;line-height: 15vh;vertical-align:middle;
height: 15vh;z-index: 666}
.icon_savePic{width:5vh;height: 5vh;margin: 5vh auto;line-height: 15vh;display: block}
.savePicCanvas{border:1px #000 solid}